<Window x:Class="desktopTickets.Views.ModificarUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modificar Usuario" Height="400" Width="500" Background="#FF8C03">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Nombre:" Margin="5"/>
            <TextBox Text="{Binding Usuario.NOMBRE}" Width="300" Margin="5"/>

            <TextBlock Text="Apellidos:" Margin="5"/>
            <TextBox Text="{Binding Usuario.APELLIDOS}" Width="300" Margin="5"/>

            <TextBlock Text="Centro:" Margin="5"/>
            <TextBox Text="{Binding Usuario.CENTRO}" Width="300" Margin="5"/>

            <TextBlock Text="Perfil:" Margin="5"/>
            <TextBox Text="{Binding Usuario.PERFIL}" Width="300" Margin="5"/>

            <Button Content="Guardar" Command="{Binding SaveCommand}" Width="100" Margin="10" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
